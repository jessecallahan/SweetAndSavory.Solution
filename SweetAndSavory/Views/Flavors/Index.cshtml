@{
  Layout = "_Layout";
}
<h2>Flavors</h2>
@using SweetAndSavory.Models;

@if (@Model.Count != 0)
{
  <ul>
  @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
}
else
{
  <h3>No flavors have been added yet!</h3>
}

<p>@Html.ActionLink("Add new flavor", "Create")</p>
<p>@Html.ActionLink("Go to list of flavors created by this User", "PersonalIndex")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>