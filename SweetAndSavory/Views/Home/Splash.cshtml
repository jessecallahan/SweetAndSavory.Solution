@{
  Layout = "_Layout";
}

<h2>List of Flavors</h2>
@foreach (var flavor in ViewBag.Flavors)
{
  <li>@Html.ActionLink($"{flavor.Name}", "Details", "Flavors", new { id = flavor.FlavorId }) </li>
}
<h2>List of Treats</h2>
@foreach (var treat in ViewBag.Treats)
{
  <li>@Html.ActionLink($"{treat.Name}", "Details", "Treats", new { id = treat.TreatId }) </li>
}
</br>
<p>@Html.ActionLink("Go to Flavors Page", "Index", "Flavors")</p>
<p>@Html.ActionLink("Go to Treats Page", "Index", "Treats")</p>